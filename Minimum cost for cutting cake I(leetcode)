#minimum cost for cutting cakeI(leetcode)

import java.util.*;

public class MinCostToCutCake {

    public static int minimumCost(int m, int n, int[] horizontalCut, int[] verticalCut) {

        // Sort both arrays in descending order
        Arrays.sort(horizontalCut);
        Arrays.sort(verticalCut);

        int h = horizontalCut.length - 1;
        int v = verticalCut.length - 1;

        int hPieces = 1; // number of horizontal segments
        int vPieces = 1; // number of vertical segments

        int totalCost = 0;

        // Process cuts greedily
        while (h >= 0 && v >= 0) {
            if (horizontalCut[h] > verticalCut[v]) {
                totalCost += horizontalCut[h] * vPieces;
                hPieces++;
                h--;
            } else {
                totalCost += verticalCut[v] * hPieces;
                vPieces++;
                v--;
            }
        }

        // Remaining horizontal cuts
        while (h >= 0) {
            totalCost += horizontalCut[h] * vPieces;
            h--;
        }

        // Remaining vertical cuts
        while (v >= 0) {
            totalCost += verticalCut[v] * hPieces;
            v--;
        }

        return totalCost;
    }

    // Example testing
    public static void main(String[] args) {
        System.out.println(minimumCost(3, 2, new int[]{1, 3}, new int[]{5})); // 13
        System.out.println(minimumCost(2, 2, new int[]{7}, new int[]{4}));   // 15
    }
}
