#linked list
class Solution {

    public ListNode removeNthFromEnd(ListNode head, int n) {

        // Step 1: Find length of linked list
        ListNode temp = head;
        int len = 0;

        while (temp != null) {
            len++;
            temp = temp.next;
        }

        // Step 2: Find position from start
        int pos = len - n + 1;
        int idx = 1;
        temp = head;

        // Step 3: If first node is to be removed
        if (pos == 1) {
            head = head.next;
            return head;
        }

        // Step 4: Move to (pos-1)th node
        while (idx != pos - 1) {
            temp = temp.next;
            idx++;
        }

        // Step 5: Delete the node
        temp.next = temp.next.next;

        return head;
    }
}
